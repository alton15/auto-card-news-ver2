# RSS feed URLs (comma-separated)
NEWS_RSS_FEEDS=https://en.yna.co.kr/RSS/news.xml,http://rss.joinsmsn.com/news/joins_joongangdaily_news.xml

# Output directory for generated card news
NEWS_OUTPUT_DIR=./output

# Enable PII redaction and safety filters (default: true)
NEWS_SAFETY_ENABLED=true

# Max number of feed items to process per run
NEWS_MAX_ITEMS=10

# Number of cards per carousel (default: 6)
NEWS_NUM_CARDS=6

# Brand name shown on CTA card
NEWS_BRAND_NAME=Card News

# Brand handle shown on CTA card
NEWS_BRAND_HANDLE=@cardnews

# --- Threads API ---
# Threads 사용자 ID (Meta Developer Portal에서 확인)
THREADS_USER_ID=

# --- Cloudinary (이미지 호스팅) ---
# https://cloudinary.com 대시보드에서 확인
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
